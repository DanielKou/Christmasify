{
  "manifest_version": 2,
 
  "name": "Christmasify",
  "short_name": "Christmasify",
  "description": "Click the icon to get some snowy goodness!",
  "version": "1.0",
  "icons":{"16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"},
  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
   "default_icon": "icon16.png"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["main.js"]
    }
  ]
}